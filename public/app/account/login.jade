.navbar-right
    form.navbar-form(ng-controller="LoginCtrl")
        .form-group(ng-hide="identity.isAuthenticated()")
            input.form-control(type="text", placeholder="Username", ng-model="user.username")
            input.form-control(type="password", placeholder="Password", ng-model="user.password")
            button.btn.btn-default(type="submit", ng-click="login(user)") Login
        div(ng-show="identity.isAuthenticated()") {{ identity.currentUser.username }}